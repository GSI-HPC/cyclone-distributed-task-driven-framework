#!/bin/sh

LFSM_CON_DIR=/etc/lfsm/
LFSM_LOG_DIR=/var/log/lfsm/
LFSM_PID_DIR=/var/run/lfsm/

case "$1" in

	configure)

		if [ ! -d "$LFSM_CON_DIR" ]; then
			mkdir -p "$LFSM_CON_DIR"
		fi
		
		if [ ! -d "$LFSM_LOG_DIR" ]; then
			mkdir -p "$LFSM_LOG_DIR"
		fi

		if [ ! -d "$LFSM_PID_DIR" ]; then
			mkdir -p "$LFSM_PID_DIR"
		fi

	;;

esac

#DEBHELPER#

exit 0
